<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- ================================== Robot arm ================================= -->
  <ThingDef ParentName="PRFResourceBase">
    <defName>PRFRoboticArm</defName>
    <label>robotic arm</label>
    <description>A robotic arm powered by an electric motor. Used in the construction of some automation buildings.</description>
    <graphicData>
      <texPath>Common/RoboticArm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>150</MarketValue>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>1000</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <costList>
      <Steel>20</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
    </recipeMaker>
    <researchPrerequisites>
      <li>PRFEulersIdentity</li>
    </researchPrerequisites>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
  </ThingDef>

  <!-- ================================== Weak Chip ================================= -->
  <ThingDef ParentName="PRFResourceBase">
    <defName>PRFWeakAIChip</defName>
    <label>weak AI chip</label>
    <description>A tensor processing unit containing the most rudimentary AI.</description>
    <graphicData>
      <texPath>Common/WeakAICore</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>150</MarketValue>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>1</Mass>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <researchPrerequisite>PRFMachineLearning</researchPrerequisite>
    </recipeMaker>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
  </ThingDef>

  <!-- ================================== Drone module ================================= -->
  <ThingDef ParentName="PRFResourceBase">
    <defName>PRFDroneModule</defName>
    <label>drone module</label>
    <description>A dormant quadcopter frame capable of low-altitude flight.</description>
    <graphicData>
      <texPath>Common/DroneModule</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>400</MarketValue>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>2</Mass>
      <WorkToMake>2000</WorkToMake>
    </statBases>
    <costList>
      <Plasteel>10</Plasteel>
      <Steel>30</Steel>
    </costList>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
    </recipeMaker>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
    <stackLimit>75</stackLimit>
  </ThingDef>

</Defs>
